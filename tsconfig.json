{
    "compilerOptions": {
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir": "src",
        "module": "esnext",
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}