{
    "compilerOptions": {
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir": "src",
        "module": "esnext",
        "target": "es6",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
       //"noImplicitAny": true,
        //"noEmit": true,
        //"isolatedModules": true,
        "strictNullChecks": true,
        "rootDirs": [
            "./"
        ],
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        
    ],
    "files": ["src/entry-client.tsx"],
    "exclude": [
        "node_modules",
        "dist",
        "build/*"
    ]
}